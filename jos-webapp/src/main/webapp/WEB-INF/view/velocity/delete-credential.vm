<html>
	<head>
		<title>#springMessage("openid")</title>
	</head>
	<body>
	<div>
		#parse("header.vm")
		<fieldset>
			<legend>#springMessage("message.credential.deletingCredential")</legend>
			<form action="delete.credential" method="post">
				#springMessage("confirm.credential.delete")
				#springBind("credential.id")
				<input type="hidden" name="${status.expression}" value="${status.value}" />
				<table>
					<tr>
						<td class="label">
							#springMessage("label.credential.type")
						</td>
						<td>
							##${credential.handler.name}
							#springMessage("credential.handler.name.${credential.handler.id}")
							<span class="error">${status.errorMessage}</span>
						</td>
					</tr>
					<tr>
						<td>&nbsp;</td>
						<td><input type="submit" value="#springMessage("confirmedDelete")" class="button" /></td>
					</tr>
				</table>		
			</form>
		</fieldset>
		#parse("footer.vm")
	</div>
</body>
</html>
