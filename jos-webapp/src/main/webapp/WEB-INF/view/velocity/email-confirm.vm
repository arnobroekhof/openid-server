#set($springXhtmlCompliant = true)
<html>
	<head>
		<title>#springMessage("openid") - #springMessage("email.title.confirming")</title>
	</head>
	<body>
		<fieldset>
		<legend>#springMessage("email.title.confirming")</legend>
			<form action="#josUrl("/email-confirm")" method="post">
				<div>
					<label for="confirmationCode">#springMessage("email.label.confirmationCode")</label>
					#springFormInput("command.confirmationCode" 'class="common" style="width:50%"')
					<button type="submit">#springMessage("email.button.confirm")</button>
					<div>#springShowErrors("" "error")</div>
				</div>
			</form>
		</fieldset>
	</body>
</html>
