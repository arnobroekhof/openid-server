<html>
	<head>
		<title>#springMessage("openid") - #springMessage("login")</title>
	</head>
	<body>
	<div>
		#parse("header.vm")
		<fieldset>
			<legend>#springMessage("login")</legend>
			<form action="approving" method="post">
				#springBind("command.token")
				<input type="hidden" name="$!{status.expression}" value="$!{esc.html($!{status.value})}" />
				#springBind("command.required")
				#foreach($attr in $status.value)
					$attr <input type="text" name="" value="" />
				#end
				#springBind("command.optional")
				#foreach($attr in $status.value)
					$attr
				#end
				<input type="submit" name="allow_forever" value="Allow Forever" />
				<input type="submit" name="allow_once" value="Allow Once" />
				<input type="submit" name="deny" value="Deny" />
			</form>
		</fieldset>
		#parse("footer.vm")
	</div>
</body>
</html>
