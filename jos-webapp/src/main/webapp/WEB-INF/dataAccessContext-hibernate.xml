<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName"
			value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
		<!-- 
			<property name="validationQuery"
			value="${jdbc.validationQuery}" />
		-->
	</bean>
	<!--bean id="dataSource"
		class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/jos" />
		</bean-->

	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="hibernate.dialect">
					${hibernate.dialect}
				</prop>
				<prop key="hibernate.show_sql">
					${hibernate.show_sql}
				</prop>
				<prop key="hibernate.hbm2ddl.auto">
					${hibernate.hbm2ddl.auto}
				</prop>
				<prop key="jdbc.fetch_size">50</prop>
				<prop key="jdbc.batch_size">25</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.provider_class">
					org.hibernate.cache.EhCacheProvider
				</prop>
				<prop key="hibernate.query.substitutions">
					true 1,false 0
				</prop>
			</props>
		</property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties" ref="hibernateProperties" />
		<property name="mappingLocations">
			<list>
				<value>
					classpath*:/cn/net/openid/jos/dao/hibernate/*.xml
				</value>
			</list>
		</property>
	</bean>

	<bean id="baseDao"
		class="cn.net.openid.jos.dao.hibernate.BaseHibernateEntityDao"
		abstract="true">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="userDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateUserDao"
		parent="baseDao" />
	<bean id="passwordDao"
		class="cn.net.openid.jos.dao.hibernate.HibernatePasswordDao"
		parent="baseDao" />
	<bean id="emailDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateEmailDao"
		parent="baseDao" />
	<bean id="emailConfirmationInfoDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateEmailConfirmationInfoDao"
		parent="baseDao" />
	<bean id="personaDao"
		class="cn.net.openid.jos.dao.hibernate.HibernatePersonaDao"
		parent="baseDao" />
	<bean id="attributeDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateAttributeDao"
		parent="baseDao" />
	<bean id="attributeValueDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateAttributeValueDao"
		parent="baseDao" />
	<bean id="realmDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateRealmDao"
		parent="baseDao" />
	<bean id="siteDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateSiteDao"
		parent="baseDao" />

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>
