<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<map>
				<entry key="hibernate.dialect">
					<bean class="org.springframework.jndi.JndiObjectFactoryBean">
						<property name="jndiName">
							<value>java:comp/env/hibernate.dialect</value>
						</property>
					</bean>
				</entry> 
				<entry key="hibernate.hbm2ddl.auto">
					<bean class="org.springframework.jndi.JndiObjectFactoryBean">
						<property name="jndiName">
							<value>java:comp/env/hibernate.hbm2ddl.auto</value>
						</property>
					</bean>
				</entry>
				<entry key="hibernate.show_sql">
					<bean class="org.springframework.jndi.JndiObjectFactoryBean">
						<property name="jndiName">
							<value>java:comp/env/hibernate.show_sql</value>
						</property>
					</bean>
				</entry>
				<entry key="jdbc.fetch_size">
					<bean class="org.springframework.jndi.JndiObjectFactoryBean">
						<property name="jndiName">
							<value>java:comp/env/jdbc.fetch_size</value>
						</property>
					</bean>
				</entry>
				<entry key="jdbc.batch_size">
					<bean class="org.springframework.jndi.JndiObjectFactoryBean">
						<property name="jndiName">
							<value>java:comp/env/jdbc.batch_size</value>
						</property>
					</bean>
				</entry>
				<entry key="hibernate.cache.use_query_cache"><value>true</value></entry>
				<entry key="hibernate.cache.provider_class">
					<value>org.hibernate.cache.EhCacheProvider</value>
				</entry>
				<entry key="hibernate.query.substitutions">
					<value>true 1,false 0</value>
				</entry>
			</map>
		</property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties" ref="hibernateProperties" />
		<property name="mappingLocations">
			<list>
				<!--
					Avoid to use wildcard as it will cause
					org.hibernate.DuplicateMappingException
					when duplicate jos-hibernate-*.jar found in the classpath
				<value>
					classpath*:/cn/net/openid/jos/dao/hibernate/*.xml
				</value>
				-->
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Attribute.hbm.xml</value>
				<!--
				Non use from 2008-10-13, if it is non use 2 year later, delete me.
				<value>classpath:/cn/net/openid/jos/dao/hibernate/AttributeValue.hbm.xml</value>
				-->
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Domain.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Email.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/EmailConfirmationInfo.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Password.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Persona.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Realm.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/Site.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/User.hbm.xml</value>
				<value>classpath:/cn/net/openid/jos/dao/hibernate/UsernameConfiguration.hbm.xml</value>
			</list>
		</property>
	</bean>


	<!-- ================ DAO DEFINITIONS ================ -->

	<bean id="baseDao"
		class="cn.net.openid.jos.dao.hibernate.BaseHibernateEntityDao"
		abstract="true">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="domainDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateDomainDao"
		parent="baseDao" />
	<bean id="userDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateUserDao"
		parent="baseDao" />
	<bean id="passwordDao"
		class="cn.net.openid.jos.dao.hibernate.HibernatePasswordDao"
		parent="baseDao" />
	<bean id="emailDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateEmailDao"
		parent="baseDao" />
	<bean id="emailConfirmationInfoDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateEmailConfirmationInfoDao"
		parent="baseDao" />
	<bean id="personaDao"
		class="cn.net.openid.jos.dao.hibernate.HibernatePersonaDao"
		parent="baseDao" />
	<bean id="attributeDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateAttributeDao"
		parent="baseDao" />
	<bean id="attributeValueDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateAttributeValueDao"
		parent="baseDao" />
	<bean id="realmDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateRealmDao"
		parent="baseDao" />
	<bean id="siteDao"
		class="cn.net.openid.jos.dao.hibernate.HibernateSiteDao"
		parent="baseDao" />
</beans>
