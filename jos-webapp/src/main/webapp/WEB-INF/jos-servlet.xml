<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="abstractController"
		class="cn.net.openid.web.AbstractController" abstract="true">
		<property name="daoFacade" ref="daoFacade" />
		<property name="serverManager" ref="serverManager" />
	</bean>

	<bean id="abstractSimpleFormController"
		class="cn.net.openid.web.AbstractSimpleFormController"
		abstract="true">
		<property name="daoFacade" ref="daoFacade" />
		<property name="serverManager" ref="serverManager" />
	</bean>

	<bean id="serverController"
		class="cn.net.openid.web.ServerController"
		parent="abstractDaoFacadeController">
	</bean>
	<bean id="providerAuthorizationController"
		class="cn.net.openid.web.ProviderAuthorizationController">
	</bean>
	<bean id="approvingController"
		class="cn.net.openid.web.ApprovingController"
		parent="abstractSimpleFormController">
		<property name="commandClass"
			value="cn.net.openid.web.LoginForm" />
	</bean>
	<!-- The home page controller before and after logged in. -->
	<bean id="homeController"
		class="cn.net.openid.web.HomeController">
	</bean>

	<!-- Register a user page controller. -->
	<bean id="registerController"
		class="cn.net.openid.web.RegisterController"
		parent="abstractSimpleFormController">
		<property name="commandClass"
			value="cn.net.openid.web.RegisterForm" />
		<property name="formView" value="register" />
		<property name="successView" value="register-success" />
		<property name="validator" ref="registerFormValidator" />
	</bean>

	<!-- Simple login page controller. -->
	<bean id="loginController" class="cn.net.openid.web.LoginController"
		parent="abstractSimpleFormController">
		<property name="commandClass"
			value="cn.net.openid.web.LoginForm" />
		<property name="formView" value="login" />
		<property name="successView" value="login-success" />
	</bean>

	<!-- Login handlers list controller. -->
	<bean id="loginHandlersController"
		class="cn.net.openid.web.LoginHandlersController"
		parent="abstractSimpleFormController">
		<property name="commandClass"
			value="cn.net.openid.web.LoginHandlersForm" />
		<property name="formView" value="login-handlers" />
		<property name="successView" value="login-handlers" />
	</bean>

	<!-- Logout. -->
	<bean id="logoutController"
		class="cn.net.openid.web.LogoutController">
	</bean>

	<!-- Email. -->
	<bean id="emailController" class="cn.net.openid.web.EmailController"
		parent="abstractSimpleFormController">
		<property name="commandName" value="email" />
		<property name="commandClass"
			value="cn.net.openid.domain.Email" />
		<property name="formView" value="email" />
		<property name="successView" value="email-success" />
	</bean>
	<bean id="deleteEmailController"
		class="cn.net.openid.web.DeleteEmailController"
		parent="abstractSimpleFormController">
	</bean>

	<!-- Profile edit. -->
	<bean id="profileController"
		class="cn.net.openid.web.ProfileController"
		parent="abstractSimpleFormController">
		<property name="commandName" value="profile" />
		<property name="commandClass" value="cn.net.openid.domain.User" />
		<property name="formView" value="profile" />
		<property name="successView" value="profile-success" />
		<property name="validator" ref="userValidator" />
		<property name="messageSource" ref="messageSource" />
		<property name="localeResolver" ref="localeResolver" />
	</bean>

	<!-- Edit the password. -->
	<bean id="editPasswordController"
		class="cn.net.openid.web.EditPasswordController"
		parent="abstractSimpleFormController">
		<property name="commandClass"
			value="cn.net.openid.web.EditPasswordForm" />
		<property name="commandName" value="editPasswordForm" />
		<property name="formView" value="edit-password" />
		<property name="successView" value="edit-password-success" />
	</bean>

	<!-- Attribute -->
	<bean id="attributesController"
		class="cn.net.openid.web.AttributesController">
		<property name="daoFacade" ref="daoFacade" />
	</bean>

	<bean id="editAttributeController"
		class="cn.net.openid.web.EditAttributeController"
		parent="abstractSimpleFormController">
		<property name="commandName" value="attribute" />
		<property name="commandClass"
			value="cn.net.openid.domain.Attribute" />
		<property name="formView" value="edit-attribute" />
		<property name="successView" value="edit-attribute-success" />
	</bean>

	<bean id="removeAttributeController"
		class="cn.net.openid.web.RemoveAttributeController"
		parent="abstractController">
	</bean>

	<bean id="attributeValueController"
		class="cn.net.openid.web.AttributeValueController"
		parent="abstractSimpleFormController">
		<property name="formView" value="attribute-value" />
		<property name="successView" value="attribute-value-success" />
	</bean>

	<!-- 
		<bean id="sitesController" class="cn.net.openid.web.SitesController">
		</bean>
	-->

	<bean id="humanLanguageSelectionController"
		class="cn.net.openid.web.HumanLanguageSelectionController">
		<property name="formView" value="human-language-selection" />
		<property name="localeResolver" ref="localeResolver" />
	</bean>

	<!-- The url mappings that can be visited anonymously. -->
	<bean id="handlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
			<list>
				<ref local="localeChangeInterceptor" />
			</list>
		</property>
		<property name="urlMap">
			<map>
				<entry key="/index.html" value-ref="homeController" />
				<entry key="/home" value-ref="homeController" />
				<entry key="/register" value-ref="registerController" />
				<entry key="/login" value-ref="loginController" />
				<entry key="/hl"
					value-ref="humanLanguageSelectionController" />
				<entry key="/server" value-ref="serverController" />
			</map>
		</property>
	</bean>

	<!-- The interceptor to check user session. -->
	<bean id="userLoggedInInterceptor"
		class="cn.net.openid.web.UserLoggedInInterceptor">
		<property name="loginPath" value="/login" />
	</bean>
	<bean id="secureHandlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
			<list>
				<ref local="userLoggedInInterceptor" />
				<ref local="localeChangeInterceptor" />
			</list>
		</property>
		<property name="urlMap">
			<map>
				<entry key="/provider-authorization"
					value-ref="providerAuthorizationController" />
				<entry key="/approving" value-ref="approvingController" />
				<entry key="/logout" value-ref="logoutController" />
				<entry key="/email" value-ref="emailController" />
				<entry key="/email-remove"
					value-ref="deleteEmailController" />
				<entry key="/profile" value-ref="profileController" />
				<entry key="/password"
					value-ref="editPasswordController" />
				<entry key="/attributes"
					value-ref="attributesController" />
				<entry key="/edit-attribute"
					value-ref="editAttributeController" />
				<entry key="/remove-attribute"
					value-ref="removeAttributeController" />
				<entry key="/attribute-value"
					value-ref="attributeValueController" />
				<!-- 
					<entry key="/sites">
					<ref local="sitesController"/>
					</entry>
				-->
			</map>
		</property>
	</bean>
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>cn.net.openid.web.messages</value>
			</list>
		</property>
	</bean>
	<bean id="velocityConfigurer"
		class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
		<property name="resourceLoaderPath"
			value="/WEB-INF/view/velocity/" />
		<property name="configLocation">
			<value>/WEB-INF/velocity.properties</value>
		</property>
	</bean>
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.velocity.VelocityViewResolver">
		<property name="prefix" value="" />
		<property name="suffix" value=".vm" />
		<property name="contentType" value="text/html; charset=UTF-8" />
		<property name="exposeSpringMacroHelpers" value="true" />
		<property name="exposeSessionAttributes" value="true" />
		<property name="toolboxConfigLocation">
			<value>/WEB-INF/toolbox.xml</value>
		</property>
	</bean>
	<bean id="localeChangeInterceptor"
		class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
		<property name="paramName" value="hl" />
	</bean>
	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />
</beans>
