<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties version="1.0">
	<comment>Configuration for Java OpenID Server.</comment>

	<!--
		The base URL. Without slash mark ending.
		e.g.
		http://openid.org.cn
	-->
	<entry key="jos.base.url">http://localhost:8080/jos-webapp</entry>

	<!--
		OpenID Server URL.
		e.g.
		http://openid.org.cn/server
	-->
	<entry key="jos.openid.server.url">http://localhost:8080/jos-webapp/server</entry>

	<!--
		The regular expression of username pattern. 
		The pattern is for registering checking.

		A regular expression tool: http://jakarta.apache.org/regexp/applet.html
	-->
	<entry key="jos.member.username.regex">[a-z]{1,16}</entry>
	
	<!--
		The regular expression of reserved username.
	-->
	<entry key="jos.member.username.reserved.regex">root|admin|administrator</entry>

	<!--
		The regular expression of unallowable username.
	-->
	<entry key="jos.member.username.unallowable.regex">w+|server|news|jos|.*fuck.*</entry>

	<!--
		For building the openid_url with field username, 
		openid_url is the url that return to the OpenID Consumer after logged in. 
		The openid_url will be: 
		${jos.member.identifier.prefix}${username}${jos.member.identifier.suffix}.
		e.g.
		${jos.member.identifier.prefix} = http://
		${jos.member.identifier.suffix} = .openid.org.cn/
		openid_url = http://USERNAME.openid.org.cn
	-->
	<entry key="jos.member.identifier.prefix">http://localhost:8080/jos-webapp/test/</entry>
	<entry key="jos.member.identifier.suffix"></entry>

	<!--
		For Member Filter.
		e.g.
		^[0-9a-zA-Z]+://([0-9a-zA-Z]+).openid.org.cn$
		^http://([0-9a-zA-Z]+).openid.org.cn$
		^https://([0-9a-zA-Z]+).openid.org.cn$
		
		([0-9a-zA-Z]) must same as or contains the value of `jos.member.username.pattern'.
		This pattern should matches ${jos.member.identifier.prefix}${jos.member.username.pattern}${jos.member.identifier.suffix}
	-->
	<entry key="jos.member.filter.from.regex">^http://localhost:8080/jos-webapp/test/([0-9a-zA-Z]+)$</entry>
</properties>
