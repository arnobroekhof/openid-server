<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid">
	<class name="Credential" table="openid_credential">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32" column="credential_id">
			<generator class="uuid" />
		</id>
		<many-to-one name="handler" column="credential_handler"
			not-null="true" lazy="false">
		</many-to-one>
		<many-to-one name="user" column="credential_userid"
			not-null="true" lazy="false">
		</many-to-one>
		<property name="info" type="binary" column="credential_info" />
	</class>
</hibernate-mapping>
