<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="Attribute" table="jos_attribute">
		<id name="id" unsaved-value="null" length="32"
			column="attribute_id">
			<generator class="uuid" />
		</id>
		<properties name="personaAttributes" unique="true">
			<many-to-one name="persona" not-null="true" column="attribute_persona_id" cascade="all" />
			<property name="alias" not-null="true" length="32" column="attribute_alias" />
		</properties>
		<property name="type" length="255" column="attribute_type_uri" />
		<bag name="values" table="jos_attribute_value" inverse="false" cascade="all" fetch="join" lazy="false">
			<key column="attribute_id" />
			<element type="string" column="attribute_value" />
		</bag>
	</class>
</hibernate-mapping>
