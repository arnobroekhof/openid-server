<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="Password" table="openid_password">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32" column="password_id">
			<generator class="uuid" />
		</id>
		<many-to-one name="user" not-null="true"
			column="password_userid" />
		<property name="password" length="255" not-null="true"
			column="password_password" />
		<property name="passwordShaHex" length="40" not-null="true"
			column="password_password_sha_hex" />
	</class>
</hibernate-mapping>
