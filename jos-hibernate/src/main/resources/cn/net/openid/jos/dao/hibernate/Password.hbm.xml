<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="Password" table="jos_password">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32" column="password_id">
			<generator class="uuid" />
		</id>
		<many-to-one name="user" not-null="true"
			column="password_user_id" />
		<property name="name" length="255" not-null="true"
			column="password_name" />
		<property name="plaintext" length="255" not-null="true"
			column="password_plaintext" />
		<property name="shaHex" length="40" not-null="true"
			column="password_sha_hex" />
		<property name="usedTimes" not-null="true"
			column="password_used_times" />
		<property name="maximumServiceTimes" not-null="true"
			column="password_maximum_service_times" />
		<property name="creationDate" type="timestamp" not-null="true"
			column="password_creation_date" />
	</class>
</hibernate-mapping>
