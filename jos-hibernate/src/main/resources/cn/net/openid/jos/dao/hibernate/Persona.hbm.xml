<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="Persona" table="openid_persona">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32" column="persona_id">
			<generator class="uuid" />
		</id>
		<many-to-one name="user" column="persona_user_id" />
		<property name="name" length="255" column="persona_name" />
		<property name="nickname" length="255"
			column="persona_nickname" />
		<property name="email" length="255" column="persona_email" />
		<property name="fullname" length="255"
			column="persona_fullname" />
		<property name="dob" type="date" column="persona_dob" />
		<property name="gender" type="java.lang.String"
			column="persona_gender" length="1" />
		<property name="postcode" column="persona_postcode" />
		<property name="country" column="persona_country" />
		<property name="language" column="persona_language" />
		<property name="timezone" column="persona_timezone" />
	</class>
</hibernate-mapping>
