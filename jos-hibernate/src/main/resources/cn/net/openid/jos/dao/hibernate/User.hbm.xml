<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="User" table="jos_user">
		<id name="id" unsaved-value="null" length="32"
			column="user_id">
			<generator class="uuid" />
		</id>
		<properties name="user" update="false" unique="true">
			<property name="username" length="255"
				not-null="true" update="false" column="user_username" />
			<many-to-one name="domain"
				not-null="true" update="false" column="user_domain_id" />
		</properties>
		<property name="creationDate" type="timestamp" not-null="true"
			update="false" column="user_creation_date" />
	</class>
</hibernate-mapping>
