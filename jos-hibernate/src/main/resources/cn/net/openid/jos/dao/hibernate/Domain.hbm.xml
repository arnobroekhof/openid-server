<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.net.openid.jos.domain">
	<class name="Domain" table="jos_domain">
		<id name="id" unsaved-value="null" length="32" column="domain_id">
			<generator class="uuid" />
		</id>
		<property name="name" length="255" unique="true" not-null="true"
			update="false" column="domain_name" />
		<property name="type" not-null="true" update="false" column="domain_type" />
		<property name="serverHost" update="false" column="domain_server_host" />
		<property name="memberPath" update="false" column="domain_member_path" />

		<!-- Username pattern -->
		<property name="usernameRegex" column="domain_username_regex" />

		<!-- Reserved username pattern -->
		<property name="reservedUsernameRegex" column="domain_reserved_username_regex" />

		<!-- Unallowable username pattern -->
		<property name="unallowableUsernameRegex" column="domain_unallowable_username_regex" />
		<property name="creationDate" type="timestamp" not-null="true"
			update="false" column="domain_creation_date" />
	</class>
</hibernate-mapping>