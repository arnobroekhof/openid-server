<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="baseDao"
		class="cn.net.openid.jos.dao.hibernate.BaseHibernateEntityDao"
		abstract="true" p:sessionFactory-ref="sessionFactory" />
	<bean class="cn.net.openid.jos.dao.hibernate.HibernatePersonaDao" parent="baseDao" />

	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
		p:dataSource-ref="dataSource" p:mappingResources="/cn/net/openid/jos/dao/hibernate/Persona.hbm.xml,/cn/net/openid/jos/dao/hibernate/Attribute.hbm.xml,/cn/net/openid/jos/dao/hibernate/User.hbm.xml,/cn/net/openid/jos/dao/hibernate/Domain.hbm.xml,/cn/net/openid/jos/dao/hibernate/UsernameConfiguration.hbm.xml">
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
			</props>
		</property>
		<property name="eventListeners">
			<map>
				<entry key="merge">
					<bean class="org.springframework.orm.hibernate3.support.IdTransferringMergeEventListener" />
				</entry>
			</map>
		</property>
	</bean>

	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager"
		p:sessionFactory-ref="sessionFactory" />

	<bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor" />

</beans>
