<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="zh-CN">
	<head>
		<title>OpenID Login</title>
		<meta http-equiv="Content-Type"	content="application/xhtml-xml; charset=UTF-8" />
		<meta name="robots" content="all" />
		<meta name="keywords" content="openid" />
		<meta name="description" content="OpenID Provider" />
		#parse("css.vm")
		#parse("scripts.vm")
	</head>
	<body>
	<div>
		#parse("header.vm")
		<form action="login" method="post">
			<table>
				#springBind("command.openidUrl")
				<tr>
					<td>
						<label for="openidUrl">OpenID：</label>
					</td>
					<td>
						<input type="text" id="openidUrl" name="$!{status.expression}" class="sexy" size="30" value="$!{esc.html($!{status.value})}" />
						<span class="error">$!{status.errorMessage}</span>
					</td>
				</tr>
				#springBind("command.password")
				<tr>
					<td>
						<label for="password">密码：</lable>
					</td>
					<td>
						<input type="password" id="password" name="password" size="30" />
						<span class="error">$!{status.errorMessage}</span>
					</td>
				</tr>
			</table>
			<input type="submit" value="登录" class="button" />
		</form>
		#parse("footer.vm")
	</div>
</body>
</html>
