<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="zh-CN">
	<head>
		<title>#springMessage("openid") - #springMessage("register")</title>
		<meta http-equiv="Content-Type"	content="application/xhtml-xml; charset=UTF-8" />
		<meta name="robots" content="all" />
		<meta name="keywords" content="openid" />
		<meta name="description" content="OpenID Provider" />
		#parse("css.vm")
		#parse("scripts.vm")
		<script type="text/javascript">
			function chkFrm() {
				var objMember = document.getElementById("username");
				if (objMember.value == "") {
					alert("OpenID URL is error.");
					objMember.focus();
					return false;
				}
				var objPassword = document.getElementById("password");
				if (objPassword.value == "") {
					alert("Password can't empty.");
					objPassword.focus();
					return false;
				}
				var objRetypePassword = document.getElementById("retypePassword");
				if (objPassword.value != objRetypePassword.value) {
					alert("Retype password is not correct.");
					objRetypePassword.focus();
					return false;
				}
			}
		</script>
	</head>
	<body>
	<div>
		#parse("header.vm")
		<fieldset>
			<legend>#springMessage("register")</legend>
			<form action="register" method="post" onsubmit="return chkFrm()">
				<table>
					#springBind("command.username")
					<tr>
						<td class="label">
							<label for="username">#springMessage("label.openid")</label>
						</td>
						<td>
							http://<input type="text" id="username" name="username" class="sexy" size="10" value="$!{esc.html($!{status.value})}" />.openid.org.cn
							<span class="error">$!{status.errorMessage}</span>
						</td>
					</tr>
				</table>
				<table>
					<tr>
						<td class="label">
							<label for="password">#springMessage("label.password")</label>
						</td>
						<td>
							<input type="password" id="password" name="password" />
						</td>
					</tr>
					<tr>
						<td class="label">
							<label for="confirmingPassword">#springMessage("label.confirmingPassword")</label>
					  </td>
						<td>
							<input type="password" id="confirmingPassword" name="confirmingPpassword" />
						</td>
					</tr>
					<tr>
						<td class="label">&nbsp;</td>
						<td><input name="submit" type="submit" class="button" value="#springMessage("register")" /></td>
					</tr>
				</table>
			</form>
		</fieldset>
		#parse("footer.vm")
	</div>
</body>
</html>
