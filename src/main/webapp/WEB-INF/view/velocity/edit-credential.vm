<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="zh-CN">
	<head>
		<title>OpenID Login</title>
		<meta http-equiv="Content-Type"	content="application/xhtml-xml; charset=UTF-8" />
		<meta name="robots" content="all" />
		<meta name="keywords" content="openid" />
		<meta name="description" content="OpenID Provider" />
		#parse("css.vm")
		#parse("scripts.vm")
	</head>
	<body>
	<div>
		#parse("header.vm")
		<form action="edit.credential" method="post">
			<table>
				<tr>
					<td class="label">
						#springMessage("label.credential.type")
					</td>
					<td>
						<dl>
							#foreach($credentialHandler in $credentialHandlers)
							<dt>
								<input type="radio" id="${credentialHandler.id}" name="credentialHandlerId" value="${credentialHandler.id}" />
								<label for="${credentialHandler.id}">$!{credentialHandler.name}</label>
							</dt>
							<dd>$!{credentialHandler.description}</dd>
							#end
						</dl>
					</td>
				</tr>
				<tr>
					<td>&nbsp;</td>
					<td><input type="submit" value="#springMessage("continue")" class="button" /></td>
				</tr>
			</table>
		</form>
		#parse("footer.vm")
	</div>
</body>
</html>
