<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties version="1.0">
	<comment>This is the configuration for OpenID Server.</comment>

	<!--
		OpenID Server URL.
		e.g.
		http://openid.org.cn/openid.server
	-->
	<entry key="openid.server">http://localhost:8080/openid-server/openid.server</entry>

	<!-- 
		The regular expression of username pattern. 
		The pattern is for registering checking. 
	-->
	<entry key="openid.member.usernamePattern">[a-z]{1,16}</entry>

	<!-- 
		For building the openid_url with field username, 
		openid_url is the url that return to the OpenID Consumer after logged in. 
		The openid_url will be: 
		${openid.member.openidUrlPrefix}${username}${openid.member.openidUrlSuffix}.
		e.g.
		${openid.member.openidUrlPrefix} = http://
		${openid.member.openidUrlSuffix} = .openid.org.cn/
		openid_url = http://USERNAME.openid.org.cn
	-->
	<entry key="openid.member.openidUrlPrefix">http://localhost:8080/openid-server/member/</entry>
	<entry key="openid.member.openidUrlSuffix">/</entry>

	<!--
		For Member Filter.
		e.g.
		^[0-9a-zA-Z]+://([0-9a-zA-Z]+).openid.org.cn
		^http://([0-9a-zA-Z]+).openid.org.cn
		^https://([0-9a-zA-Z]+).openid.org.cn
		
		([0-9a-zA-Z]) must same as or contains the value of `openid.member.usernamePattern'.
	-->
	<entry key="openid.member.filter.fromPattern">^http://localhost:8080/openid-server/test/([0-9a-zA-Z]+)</entry>
</properties>
