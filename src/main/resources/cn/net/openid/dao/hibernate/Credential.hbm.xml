<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid">
	<class name="UsernamePasswordCredential" table="CREDENTIAL">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32">
			<generator class="uuid" />
		</id>
		<property name="username"></property>
		<property name="password"></property>
		<many-to-one name="user" column="userId" not-null="true"></many-to-one>
	</class>
</hibernate-mapping>
