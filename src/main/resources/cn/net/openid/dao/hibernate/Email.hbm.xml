<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid.domain">
	<class name="Email" table="openid_email">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32" column="email_id">
			<generator class="uuid" />
		</id>
		<many-to-one name="user" not-null="true" column="email_userid" />
		<property name="address" length="255" column="email_address" />
		<joined-subclass name="UnconfirmedEmail"
			table="openid_unconfirmed_email" extends="Email">
			<key column="email_id" />
			<property name="confirmCode" length="40"
				column="confirm_code" />
		</joined-subclass>
	</class>
</hibernate-mapping>
