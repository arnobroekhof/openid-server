<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.net.openid">
	<class name="User" table="USER">
		<id name="id" unsaved-value="null" type="java.lang.String"
			length="32">
			<generator class="uuid" />
		</id>
		<property name="username" length="255" unique="true" />
		<property name="nickname" length="255" />
		<property name="email" length="255" />
		<property name="fullname" length="255" />
		<property name="dob" />
		<property name="gender" />
		<property name="postcode" />
		<property name="country" />
		<property name="language" />
		<property name="timezone" />
		<property name="registerTime" type="date" />
	</class>
</hibernate-mapping>
